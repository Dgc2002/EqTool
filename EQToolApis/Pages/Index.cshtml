@page
@model EQToolApis.Pages.IndexModel
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
@Model.Login
<div class="container">
    <div class="row">
        <div class="col-offset-1 col-4">
            <table class="table table-sm table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Last Seen</th>
                        <th>Item</th>
                        <th>Count</th>
                        <th>Average Price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var auctions in Model.AuctionItemsCol1)
                    {
                        <tr>
                            <td> @auctions.LastSeen.ToString("yyyy-MM-dd") </td>
                            <td> @auctions.ItemName </td>
                            <td> @auctions.Count </td>
                            <td> @auctions.AveragePrice </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-4"> 
            <table class="table table-sm table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Last Seen</th>
                        <th>Item</th>
                        <th>Count</th>
                        <th>Average Price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var auctions in Model.AuctionItemsCol2)
                    {
                        <tr>
                            <td> @auctions.LastSeen.ToString("yyyy-MM-dd") </td>
                            <td> @auctions.ItemName </td>
                            <td> @auctions.Count </td>
                            <td> @auctions.AveragePrice </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>

</div>
