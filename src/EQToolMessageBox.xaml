<Window x:Class="EQTool.EQToolMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EQTool"
        mc:Ignorable="d"
        Title="EQToolMessageBox" Height="200" Width="400" WindowStyle="None">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBox Name="EQTitle" FontSize="24" FontWeight="Medium"/>
            <TextBox Name="EQBody" FontSize="16" TextWrapping="Wrap"/> 
        </StackPanel>
        <Button VerticalAlignment="Bottom" Click="Button_Click">Ok</Button>
    </Grid>
</Window>
